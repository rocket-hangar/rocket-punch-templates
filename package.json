{
  "private": true,
  "version": "2021.04.03",
  "author": "SSen <i@ssen.name>",
  "license": "MIT",
  "repository": "github:rocket-hangar/rocket-punch-templates",
  "workspaces": [
    "templates/*",
    "examples/*"
  ],
  "scripts": {
    "format": "prettier --write \"**/*.{js,ts,tsx}\"",
    "lint": "eslint \"**/*.{js,ts,tsx}\"",
