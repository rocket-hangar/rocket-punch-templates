  },
  "devDependencies": {
    "@handbook/markdown-source-import": "^1.1.0",
    "@ssen/eslint-config": "^2.0.1",
    "@ssen/prettier-config": "^2.0.1",
    "eslint": "^7.23.0",
    "husky": "^6.0.0",
    "lint-staged": "^10.5.4",
    "prettier": "^2.2.1"
  }
}
